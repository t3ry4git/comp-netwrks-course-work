<Window x:Class="comp_netwrks_course_work.SetNodeCount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:comp_netwrks_course_work"
        mc:Ignorable="d"
        Title="Node count" Height="150" Width="200" MinWidth="150" MinHeight="120" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" >
        <Label  Content="Enter count of nodes" Margin="5" HorizontalAlignment="Center"/>
        <TextBox x:Name="Textik" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="20" VerticalAlignment="Center" Width="120" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
        </StackPanel>
    </Grid>
</Window>
