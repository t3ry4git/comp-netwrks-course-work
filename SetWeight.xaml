<Window x:Class="comp_netwrks_course_work.SetWeight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:comp_netwrks_course_work"
        mc:Ignorable="d"
        Title="Вкажіть ваги" Height="200" Width="300" ResizeMode="CanMinimize">
    <Grid>
        <CheckBox x:Name="randomly" Content="Використовувати випадково" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
        <RichTextBox x:Name="richyWeights" Grid.ColumnSpan="2" Margin="5,30,5,5" TextChanged="RichTextBox_TextChanged">
            <FlowDocument>
                <Paragraph>
                    <Run Text="2 3 6 9 12 14 16 18 20"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
