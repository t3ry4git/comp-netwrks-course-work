<Window x:Class="comp_netwrks_course_work.NodeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Node Editor" Height="230" Width="300" MinHeight="200" MinWidth="200" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Label  Content="Number:"  Margin="5" />
                    <Label  Content="Node Type:"  Margin="5" />
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBox  x:Name="NumberTextBox" Margin="5,10,5,5" MinWidth="80"/>
                    <ComboBox  x:Name="NodeTypeComboBox" Margin="5,10,5,5" MinWidth="80" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button x:Name="SaveButton" Content="Save" Width="75" Height="50" Margin="5" Click="SaveButton_Click" />
            <Button x:Name="CancelButton" Content="Cancel" Width="75" Height="50" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
